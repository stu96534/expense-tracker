<form action="/expened/{{record._id}}?_method=PUT" method="post">
  <div class="col-sm-8 mt-5 mx-auto">
    <div class="mb-5  row d-flex justify-content-center">
      <label for="exampleFormControlInput1" class="form-label col fs-7 d-flex align-items-center">*必填欄位</label>
      <div class="col-sm-10 text-center">
        <h2>請輸入你的支出</h1>
      </div>
      {{> message}}
    </div>

    <div class="mb-5  row d-flex justify-content-center">
      <label for="name" class="form-label col fs-3 d-flex align-items-center">名稱*：</label>
      <div class="col-sm-10">
        <input type="text" class="form-control fs-3" id="name" name="name" value="{{ record.name }}">
      </div>
    </div>


    <div class="mb-5 row d-flex justify-content-center">
      <label for="exampleFormControlInput1" class="form-label col fs-3 d-flex align-items-center">日期*：</label>
      <div class="col-sm-10">
        <input type="date" class="form-control fs-3" id="date" name="date" value="{{ date }}">
      </div>
    </div>


    <div class="mb-5 row d-flex justify-content-center">
      <label for="exampleFormControlInput1" class="form-label col fs-3 d-flex align-items-center">類別*：</label>
      <div class="col-sm-10">
        <select class="form-select fs-3" aria-label="Default select example" id="category_id" name="category_id"
          value="{{category_id}}">
          {{#each category}}
          <option value="{{ this._id }}" {{#if this.boolean}} selected {{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="mb-5 row d-flex justify-content-center">
      <label for="amount" class="form-label col fs-3 d-flex align-items-center">金額*：</label>
      <div class="col-sm-10">
        <input type="text" class="form-control fs-3" id="amount" name="amount" value="{{ record.amount }}">
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center align-self-center mt-5 mb-5">
    <button type="summit" class="btn btn-outline-primary ">修改支出</button>
  </div>


</form>