<div class="row">
  <div class="col-8 mx-auto mt-3">
    <div class="card card-body mb-2">


      <h1 class="text-center">Register</h1>
      {{> message}}
      <form action="/users/register" method="post">
        <div class="col-sm-10 mt-5 mx-auto">

          <div class="mb-4  row d-flex justify-content-center">
            <label for="name" class="form-label col fs-4 d-flex align-items-center">暱稱：</label>
            <div class="col-sm-9">
              <input type="text" class="form-control fs-4" id="name" name="name" value="{{name}}">
            </div>
          </div>

          <div class="mb-4  row d-flex justify-content-center">
            <label for="email" class="form-label col fs-4 d-flex align-items-center">帳號：</label>
            <div class="col-sm-9">
              <input type="email" class="form-control fs-4" id="email" name="email" value="{{email}}">
            </div>
          </div>


          <div class="mb-4 row d-flex justify-content-center">
            <label for="password" class="form-label col fs-4 d-flex align-items-center">密碼：</label>
            <div class="col-sm-9">
              <input type="password" class="form-control fs-4" id="password" name="password" value="{{password}}">
            </div>
          </div>

          <div class="mb-4 row d-flex justify-content-center">
            <label for="confirmPassword" class="form-label col fs-4 d-flex align-items-center">確認密碼：</label>
            <div class="col-sm-9">
              <input type="password" class="form-control fs-4" id="confirmPassword" name="confirmPassword"
                value="{{confirmPassword}}">
            </div>
          </div>



          <div class="d-grid justify-content-center align-self-center mt-5">
            <button type="summit" class="btn btn-outline-primary ">註冊</button>
            <a href="/auth/facebook" class="btn btn-info mt-3">facebook登入</a>
          </div>
      </form>

      <p class="lead mt-2">Have an Account? <a href="/users/login">Login</a></p>

    </div>
  </div>
</div>